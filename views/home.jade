extends layout

block content
    div#fullpage
        .section
            .container
                div.main.unauth
                    h1 Travelling made 
                        span.emph smart
                        |.
                    hr
                    p TravelSmart helps you make informed travel decisions so you can enjoy a safe journey.
                    div.about
                        div.col-xs-4
                            h1 Route
                            i.fa.fa-map-signs
                            p Reliable travel info for a variety of modes of transportation.
                        div.col-xs-4
                            h1 Weather
                            i.fa.fa-sun-o
                            p Accurate 7 day forecast for origin and destination.
                        div.col-xs-4
                            h1 Health
                            i.fa.fa-medkit
                            p Zika threat analysis to reduce your risk of infection.
                    a#go-to-app.btn.btn-primary(role='button') Plan your trip
        .section
            div#main.text-center
                div#map.col-xs-7
                div#sidebar.col-xs-4                    
                    div#data
                        ul#data-tabs.nav.nav-tabs.nav-justified
                            li.data-tab.active(role='presentation', data-toggle='tab')
                                a(href='#route') Route
                            li.data-tab(role='presentation', data-toggle='tab')
                                a(href='#weather') Weather
                            li.data-tab(role='presentation', data-toggle='tab')
                                a(href='#zika-threat') Zika Threat
                        div#route
                            h1#route-heading Route Info
                            div#route-error
                            div.no-info#orig-route-info Please select an origin location.
                            div.no-info#dest-route-info Please select a destination location.
                            div#route-info
                        div#weather
                            h1#weather-heading 7-Day Forecast
                            #weather-btn-group.btn-group(role='group', aria-label='...')
                                #weather-spline.btn.btn-primary.active(role='button') Spline
                                #weather-bar.btn.btn-primary(role='button') Bar
                                #weather-clouds.btn.btn-primary(role='button') Conditions
                            div#weather-info
                                div#weather-clouds-chart.chart.text-center
                                div#orig-weather
                                    div#orig-weather-chart.chart
                                    span.no-info#orig-weather-info Please select an origin location.
                                div#dest-weather
                                    div#dest-weather-chart.chart
                                    span.no-info#dest-weather-info Please select a destination location.
                        div#zika-threat
                            h1#zika-heading Zika Threat
                            div#zika-info
                                div#zika-chart.chart
                                div#zika-pie-chart.chart
                                div#orig-zika
                                    span.no-info#orig-zika-info Please select an origin location.
                                div#dest-zika
                                    span.no-info#dest-zika-info Please select a destination location.
                        // Button trigger modal
                        //button.btn.btn-primary(type='button', data-toggle='modal', data-target='#myModal') Launch demo modal
    div#inputs
        input#orig-input.controls(type='text', placeholder='Enter an origin')
        input#dest-input.controls(type='text', placeholder='Enter a destination')
        div#mode-selector.controls
            b Mode of Travel: 
            select#mode
                option(value='DRIVING') Driving
                option(value='WALKING') Walking
                option(value='BICYCLING') Bicycling
                option(value='TRANSIT') Transit

    // Modal
    #myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
        .modal-dialog(role='document')
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                        span(aria-hidden='true') Ã—
                    h3#myModalLabel.modal-title About
                .modal-body
                    ul Datasets
                        li
                            | Google Maps JavaScript API: 
                            a(href='https://developers.google.com/maps/documentation/javascript/3.exp/reference') Map and Directions services
                        li
                            | Global Climate Network: 
                            a(href='http://www.ncdc.noaa.gov/cdo-web/webservices/v2') CDO API for GHCN Daily Summaries
                        li
                            | Wunderground: 
                            a(href='https://www.wunderground.com/weather/api/') 10-Day Forecast API
                        li
                            | CDC: 
                            a(href='https://www.cdc.gov/zika/intheus/maps-zika-us.html') Maps of Zika in the United States
                .modal-footer
                    button.btn.btn-primary(type='button', data-dismiss='modal') Close
